{
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // Editor Settings
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  // Font Settings
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontWeight": "450",
  // Python
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "ms-python.python",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  // JavaScript
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },
  // YAML
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "gitlens.codeLens.scopes": [
      "document"
    ]
  },
  // C++
  "C_Cpp.configurationWarnings": "enabled",
  "C_Cpp.autocomplete": "default",
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_sortIncludes": false,
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, AccessModifierOffset: -3, ColumnLimit: 120, BinPackArguments: false, BinPackParameters: false }",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  "[cpp]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  // Use Zsh as default shell
  "terminal.integrated.profiles.linux": {
    "Zsh": {
      "path": "/usr/bin/zsh"
    }
  },
  "terminal.integrated.defaultProfile.linux": "Zsh",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "workbench.colorTheme": "Min Dark",
  "workbench.iconTheme": "symbols",
  "symbols.hidesExplorerArrows": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "python": true
  },
  "files.exclude": {
    "**/__pycache__": true
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "github.copilot.nextEditSuggestions.enabled": false,
  "python.defaultInterpreterPath": "/bin/python3",
}